<?xml version="1.0" encoding="utf-8"?>
<!--  res/drawable/rounded_edittext.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
     <item android:state_focused="true"> 
        <layer-list>
		    <item >
		        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" android:padding="10dp">
				 	<solid android:color="#FFFFFF"/>
				    <corners android:bottomRightRadius="5dp" android:bottomLeftRadius="5dp"
				             android:topLeftRadius="5dp" android:topRightRadius="5dp"/>
				    <stroke android:width="1dp" android:color="#5498D2" />
				</shape>
		    </item>  
		     <item
                android:top="12dp" android:right="15dp">
                <bitmap android:src="@drawable/smallblackarrow" android:gravity="top|right" />
            </item>
        </layer-list>
    </item>
    
    <item>
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" android:padding="10dp" >
				 <solid android:color="#FFFFFF"/>
				    <corners android:bottomRightRadius="5dp" android:bottomLeftRadius="5dp"
				             android:topLeftRadius="5dp" android:topRightRadius="5dp"/>
				</shape>
            </item> 
            <item android:top="18dp" android:right="15dp">
                <bitmap android:src="@drawable/smallblackarrow" android:gravity="top|right" /> 
            </item>
        </layer-list>
    </item>
    
</selector>
