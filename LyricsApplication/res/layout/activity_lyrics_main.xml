<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/telainicial"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    tools:context=".LyricsMainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.68"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/notasmusicais" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="@string/welcome"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <Button
            android:id="@+id/bRegisterArtist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick" 
            android:background="@drawable/botao_entrada"
            android:text="@string/bCadastro" />
        
        
        <Button
            android:id="@+id/bRegisterLyric"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick" 
            android:background="@drawable/botao_entrada"
            android:text="@string/bCadastro" />

        <Button
            android:id="@+id/bFindLyric"
            android:layout_marginTop="8dp" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:background="@drawable/botao_entrada"
            android:text="@string/bListagem" />
    </LinearLayout>

</LinearLayout>