<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".LyricsRegistryActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:background="#3975CB">

        <ImageView
            android:id="@+id/bRegisterLyric"
             android:paddingLeft="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/novamusica" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#3975CB"
            android:paddingBottom="10dp"
            android:paddingLeft="3dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="@string/lyrics_header"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.80"
        android:orientation="vertical" >

        <Spinner
            android:id="@+id/spinArtist"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:hint="Clique para selecionar o artista"
            android:padding="5dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edName" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:background="@drawable/edittext"
            android:ems="10"  
            android:hint="@string/lyric_name_focus" 
            android:textColor="#808080" />

        <EditText
            android:id="@+id/edLyrics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="5.60"
            android:layout_marginTop="10dp" 
            android:background="@drawable/edittext"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/lyric_focus" 
            android:textColor="#808080"
            android:textSize="15dp"
            android:padding="5dp"
            
            android:inputType="textMultiLine" >

            <requestFocus />
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="10dp"
        android:background="#3975CB"
        android:gravity="center_vertical|right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bCancel"
             android:layout_width="25dp" 
            android:layout_height="25dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:autoLink="web"
            android:background="@drawable/cancelar" /> 

        <Button
            android:id="@+id/bSave"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/salvar"
            android:textColor="#ffffff" />

    </LinearLayout>

</LinearLayout>
